BasedOnStyle: LLVM
IndentWidth: 4
TabWidth: 4
UseTab: Never

# 1. Handle Newlines
# Limits how many empty lines can exist to 2 (removes "unnecessary" extra ones)
MaxEmptyLinesToKeep: 2
# Prevents clang-format from randomly wrapping your lines if they get too long
ColumnLimit: 0 

# 2. Fix the Alignment (The "Table" look)
# This aligns the values (the 0x480... parts) in your #defines
AlignConsecutiveMacros: true
# This aligns the // comments at the end of the lines
AlignTrailingComments: true

# Optional: If you also want to align variable assignments (int a   = 1;)
# AlignConsecutiveAssignments: true
# AlignConsecutiveDeclarations: true
